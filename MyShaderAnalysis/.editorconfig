# --
dotnet_diagnostic.IDE0003.severity = none
# IDE0007: Prefer use of 'var'
dotnet_diagnostic.IDE0007.severity = none
# IDE0008: use *explicit* type instead of var
dotnet_diagnostic.IDE0008.severity = error
# IDE0011: Add braces to if statemetns (excellent suggestion)
dotnet_diagnostic.IDE0011.severity = none
# IDE0044: make member read only
dotnet_diagnostic.IDE0044.severity = suggestion
# IDE0051: unused member
dotnet_diagnostic.IDE0051.severity = none
# IDE0052: member can be removed as its never used
dotnet_diagnostic.IDE0052.severity = suggestion
# IDE0058: Use discard
dotnet_diagnostic.IDE0058.severity = none
# IDE0059: unecessary assignment
dotnet_diagnostic.IDE0059.severity = suggestion
# IDE0060: Remove unused parameter
dotnet_diagnostic.IDE0060.severity = suggestion
# IDE0090: Simplify new expression
dotnet_diagnostic.IDE0090.severity = none
# CA1024: User properties where appropriate
dotnet_diagnostic.CA1024.severity = suggestion
# CA1051: do not declare visible instance fields (reasonable suggestion)
dotnet_diagnostic.CA1051.severity = suggestion
# CA1052@ Static holder type
dotnet_diagnostic.CA1052.severity = none
# CA1054: URI parameters should not be strings
dotnet_diagnostic.CA1054.severity = none
# CA1055: URI return values should not be strings
dotnet_diagnostic.CA1055.severity = none
# CA1305: behaviour of string parsing could vary
dotnet_diagnostic.CA1305.severity = none
# CA1307: Specify StringComparison for clarity
dotnet_diagnostic.CA1307.severity = suggestion
# CA1309: Use ordinal StringComparison
dotnet_diagnostic.CA1309.severity = suggestion
# CA1310: Specify StringComparison for correctness
dotnet_diagnostic.CA1310.severity = none
# CA1801 unused parameters
dotnet_diagnostic.CA1801.severity = none
# CA1805: Member is explicitly initialized to its default value
dotnet_diagnostic.CA1805.severity = none
# CA1812: Avoid uninstantiated internal classes (reasonable tip)
dotnet_diagnostic.CA1812.severity = suggestion
# CA1820: Test for empty strings using string length
dotnet_diagnostic.CA1820.severity = warning
# CA1822: Mark members (methods) as static if appropriate
dotnet_diagnostic.CA1822.severity = suggestion
# CA1823: unused field
dotnet_diagnostic.CA1823.severity = none
# CA2201: Going on about Exceptions needing to be specific
dotnet_diagnostic.CA2201.severity = none
# CA2213: Disposable fields should be disposed
dotnet_diagnostic.CA2213.severity = none
# CA2211: Non-constant fields should not be visible (decent tip)
dotnet_diagnostic.CA2211.severity = suggestion


# --- Compiler Warning (level 2) CS0162
